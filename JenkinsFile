pipeline {
    agent any
    parameters{
        choice(name: 'ENVIROMENT', choices: ['dev','test','stage','sandbox'], description: "srodowiska")
        choice(name: 'TAG', choices: ['front','junit','param','second','string','wordpress','word'], description: "tagi")
        choice(name: 'EXTAG', choices: ['','front','junit','param','second','string','wordpress','word'], description: "tagi")
    }
    stages {
        stage('checkout') {
            steps {
               git 'https://github.com/testautomation112020/qa.git'
            }
        }
        stage('run') {
            steps {
                sh "mvn clean test -Dgroups=${params.TAG} -DexcludedGroups=${params.EXTAG} -DENVIROMENT=${params.ENVIROMENT}"
            }
        }

    }
        post {
            always {
                allure([
                         includeProperties: false,
                         jdk: '',
                         properties: [[key: 'allure.issues.tracker.pattern', value: 'http://tracker.company.com/%s'],
                         [key: 'allure.tests.management.pattern', value: 'http://tms.company.com/%s'],
                         ],
                         reportBuildPolicy: 'ALWAYS',
                         results: [[path: 'qajunit/target/allure-results']]
                         ])
            }
        }
}